class Solution {
    public int minEatingSpeed(int[] piles, int h) {
        Arrays.sort(piles);
        int l=1;
        int r=piles[piles.length-1];
        int ret=-1;
        while(l<=r)
        {
            int mid=l+(r-l)/2;
           long c=0;
            for(int i=0;i<piles.length;i++)
            {
               c+=piles[i]/mid;
               if(piles[i]%mid>0)
               {
                   c+=1;
               }
            }
            if(c>h)
            {
                l=mid+1;
            }
            else
            {
                 ret=mid;
                 r=mid-1;
            }
            
        }
        return ret;   
    }
}
